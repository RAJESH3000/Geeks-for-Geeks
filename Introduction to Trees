// User function Template for C++

class Solution {
  public:
    int countNodes(int i) {
        // your code here
        if(i==1) return 1;
        int sum=1;
        for(int k=1;k<i;k++)
        {
         sum=sum*2;   
        }
        return sum;
    }
};

//{ Driver Code Starts.

int main() {
    int t;
    cin >> t;
    while (t--) {
        int i;
        cin >> i;
        Solution ob;
        int res = ob.countNodes(i);

        cout << res;
        cout << "\n";
    }
}

